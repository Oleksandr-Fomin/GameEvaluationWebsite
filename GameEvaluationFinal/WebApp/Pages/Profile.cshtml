@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/profile.css">
}

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <div class="profile-pic-wrapper">
                <img src="~/images/default-profile.jpg" alt="User Avatar" class="profile-pic" />
            </div>
            <h2>@Model.user.Username</h2>
        </div>
        <div class="profile-content">
            <p><strong>Username:</strong> @Model.user.Username</p>
            <p><strong>Email:</strong> @Model.user.Email</p>

            <button id="manageButton" class="btn-manage-details">Manage Details</button>

            <div id="manageDetails" style="display:none;">
                <form method="post" class="manage-details-form">
                    <div class="form-group">
                        <label for="username">Enter new username:</label>
                        <input type="text" asp-for="NewUsername" class="form-control" id="username" placeholder="Username">
                    </div>
                    <div class="form-group">
                        <label for="email">Enter new email:</label>
                        <input type="email" asp-for="NewEmail" class="form-control" id="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="password">Enter new password:</label>
                        <input type="password" asp-for="NewPassword" class="form-control" id="password" placeholder="Password">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm new password:</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm Password">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save Changes" class="btn btn-save-changes" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#manageButton').click(function () {
                $('#manageDetails').toggle();
            });
        });
    </script>
}